{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@cali/api-graphql": ["libs/api/graphql/src/index.ts"],
      "@cali/message-broker-alert": ["libs/message-broker/alert/src/index.ts"],
      "@cali/message-broker-camera-status": [
        "libs/message-broker/camera-status/src/index.ts"
      ],
      "@cali/message-broker-common": [
        "libs/message-broker/common/src/index.ts"
      ],
      "@cali/message-broker-handler-alert-filter": [
        "libs/message-broker-handler/alert-filter/src/index.ts"
      ],
      "@cali/message-broker-prediction-log": [
        "libs/message-broker/prediction-log/src/index.ts"
      ],
      "@cali/prisma": ["libs/prisma/src/index.ts"],
      "@generated/*": ["libs/generated/generated/*"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
