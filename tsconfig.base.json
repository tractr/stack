{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@cali/common": ["libs/common/src/index.ts"],
      "@cali/generated/*": ["libs/generated/generated/*"],
      "@cali/message-broker-alert": ["libs/message-broker/alert/src/index.ts"],
      "@cali/message-broker-common": [
        "libs/message-broker/common/src/index.ts"
      ],
      "@cali/message-broker/camera-status": [
        "libs/message-broker/camera-status/src/index.ts"
      ],
      "@cali/message-broker/frame-performance": [
        "libs/message-broker/frame-performance/src/index.ts"
      ],
      "@cali/prisma": ["libs/prisma/src/index.ts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
